{
  "name": "mercury-portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "graphql-codegen && vite build",
    "preview": "vite preview --base /mercury-portfolio",
    "preinstall": "graphql-codegen",
    "postinstall": "msw init public/ --save && husky install",
    "format": "rome format --write src",
    "precommit": "lint-staged --allow-empty"
  },
  "dependencies": {
    "@apollo/client": "^3.7.1",
    "apollo-server-core": "^3.11.1",
    "buffer": "^6.0.3",
    "kysely": "^0.22.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.8.0",
    "urql": "^3.0.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.11",
    "@graphql-codegen/typescript": "^2.8.1",
    "@graphql-codegen/typescript-resolvers": "^2.7.6",
    "@types/react": "^18.0.22",
    "@types/react-dom": "^18.0.7",
    "@types/sql.js": "^1.4.4",
    "@vanilla-extract/vite-plugin": "^3.6.1",
    "@vitejs/plugin-react": "^2.2.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "msw": "^0.48.1",
    "rome": "^10.0.1",
    "typescript": "^4.6.4",
    "vite": "^3.2.0"
  },
  "msw": {
    "workerDirectory": "public"
  },
  "lint-staged": {
    "*": "rome format --write"
  }
}
